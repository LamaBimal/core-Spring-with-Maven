<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
">
<bean id="messageid" class="com.mycompany.mavenproject.resources.Messages">
    <property name="message" value="Hello World.."/>
</bean>

<bean id="studentid" class="com.mycompany.mavenproject.resources.Student">
    <property name="firstName" value="Bimal"/>
    <property name="lastName" value="Tamang"/>
</bean>
<bean id="studentconstid" class="com.mycompany.mavenproject.resources.Student">
    <constructor-arg name="firstName" value="Nahid"/>
    <constructor-arg name="lastName" value="Afrin"/>
</bean>

</beans>
